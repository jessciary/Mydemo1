<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <Button
        android:text="@string/Button_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bx_button1"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:text="@string/Button_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bx_button2"
        android:layout_alignBaseline="@+id/bx_button1"
        android:layout_alignBottom="@+id/bx_button1"
        android:layout_toRightOf="@+id/bx_button1"
        android:layout_toEndOf="@+id/bx_button1"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"/>

    <com.bignerdranch.android.mydemo1.LinedEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bx_button1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:height="330dp"
        android:id="@+id/et1"
        android:hint="@string/et1"
        android:gravity="left"
        android:inputType="textMultiLine" />

</RelativeLayout>